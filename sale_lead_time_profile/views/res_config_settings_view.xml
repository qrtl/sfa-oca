<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res_config_settings_view_form - sale_lead_time_profile</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//h2[@id='schedule_info']" position="before">
                <h2>Delivery Lead Time Settings</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span
                                class="o_form_label"
                            >Weghts of Lead Time Profile Elements</span>
                            <span
                                class="fa fa-lg fa-building-o"
                                title="Values set here are company-specific."
                                role="img"
                                aria-label="Values set here are company-specific."
                                groups="base.group_multi_company"
                            />
                            <div class="text-muted">
                                Weights considered in identifying the best matching profile.
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label
                                        string="Source Address"
                                        for="weight_address_src"
                                        class="col-lg-3 o_light_label"
                                    />
                                    <field name="weight_address_src" />
                                </div>
                                <div class="row">
                                    <label
                                        string="Destination Address"
                                        for="weight_address_dest"
                                        class="col-lg-3 o_light_label"
                                    />
                                    <field name="weight_address_dest" />
                                </div>
                                <div class="mt8">
                                    <button
                                        name="open_lead_time_profile_list"
                                        icon="fa-arrow-right"
                                        type="object"
                                        string="Configure lead time profiles"
                                        class="btn-link"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
